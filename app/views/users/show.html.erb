<p id="notice"><%= notice %></p>


<%= render 'profile' %>


<% if current_user != @user %>
	<div>
	  <% if current_user.active_relationships.find_by(target_id: @user.id) %>
	    <%= link_to unfollow_path(@user.id), method: :delete do %>
	      <p>フォローをはずす</p>
	    <% end %>
	  <% else %>
	    <%= link_to follow_path(@user.id), method: :post do %>
	      <p>フォローする</p>
	    <% end %>
	  <% end %>
	</div>  
<% end %>

<div>
	<div>
	<% @following_users.each do |following| %>
		<p><%= following.name %></p>
	<% end %>
	</div>
	<p>フォロー：<%= @user.active_relationships.count %></p>
</div>



<%= render 'notes'%>

<div style=" clear:both;" class= "category-area">
 <% @categories.each do |category| %>
		<% if @user.notes.find_by(category: category.title) %>
			<div style="height:400px;">
				<p class="ctg-name"><%= category.title %></p>
				<% notes = @user.notes.where(category: category.title) %>
				<% notes.each do |note| %>                      
					<li>
						<%= link_to note, class: "note-card" do %>
							<%= image_tag "/note_images/#{note.image}", class: "note-image" %>
							<div><%= note.content %></div>
						<% end %>
					</li>
				<% end %>
			</div>	
		<% end %>
	<% end %>
</div>
	

