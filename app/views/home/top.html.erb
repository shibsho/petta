<div class="search">
	<p>カテゴリーごとの検索</p>
	<div>
		<%= form_tag  search_path do %>
			<input type="text">
			<input type="submit" value="検索" >
		<% end %>
	</div>
</div>




<% @notes.each do |note| %>
	<li>
		<%= link_to note, class: "note-card" do %>
			<%= image_tag "/note_images/#{note.image}", class: "note-image" %>
			<div class="note-category"><%= note.category %></div>
		<% end %>
	</li>
<% end %>


