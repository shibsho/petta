<!DOCTYPE html>
<html>
<head>
	<title>Petta</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>

	<header>
	  	<div class="container">

			<%= link_to Petta, root_path, class: "logo" %>
		 	
		  <% if user_signed_in? %>
		  	
		  	<div class="header-right">
			  	<%= link_to current_user.name, user_path(current_user.id), class: "header-menu" %>
			  	<%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "header-menu" %>
		  	</div>
		  
		  <% else %>
		  
		  	<div class="header-right">
		  		<%= link_to '登録', new_user_registration_path, class: "header-menu" %>
		  		<%= link_to 'ログインrooo', new_user_session_path, class: "header-menu" %>
		  		<%= link_to 'About', about_path, class: "header-menu" %>
		  	</div>
		  
		  <% end %>
	  	</div>
	</header>

	<div class="main">
		<div class="container">

			<%= yield %>

		</div>
	</div>


    <footer>

	</footer>
 
 </body>
</html>
