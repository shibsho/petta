<!DOCTYPE html>
<html>
<head>
	<title>Petta</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script>
	  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

	  ga('create', 'UA-82065257-2', 'auto');
	  ga('send', 'pageview');
	</script>
</head>
<body>

	<header>
	  	<div class="container">

			<%= link_to Petta, root_path, class: "logo", style: "color: #ff3300;" %>
		 	
		  <% if user_signed_in? %>
		  	
		  	<div class="header-right">
		  		<!-- ノート投稿ボタン -->
				<%= link_to new_note_path, class: "note-post-btn header-menu" do %>
					<%= image_tag "post-note.png", class: "post-note-icon" %>
					Note
				<% end %>
			  	<%= link_to current_user.name, user_path(current_user.id), class: "header-menu" %>
			  	<%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "header-menu" %>
		  	</div>
		  
		  <% else %>
		  
		  	<div class="header-right">
		  		<%= link_to '登録', new_user_registration_path, class: "header-menu" %>
		  		<%= link_to 'ログイン', new_user_session_path, class: "header-menu" %>
		  		<%= link_to 'About', about_path, class: "header-menu" %>
		  	</div>
		  
		  <% end %>
	  	</div>
	</header>

	<div class="main">
		<div class="container">

			<%= yield %>

		</div>
	</div>



    <footer>

	</footer>
 
 </body>
</html>
