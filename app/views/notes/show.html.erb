<p id="notice"><%= notice %></p>

	<p><%= @title %></p>
  	<div class="li note-card">
     	<%= image_tag "/note_images/#{@note.image}", class: "note-image" %>
     	<li><%= @note.content %></li>
     	<li><%= @note.category %></li>
     	<li><%= link_to @note.user.name, @note.user %></li>
  	</div>
  
  	<div>
  		<% if current_user.likes.find_by(note_id: @note.id) %>
    		<%= link_to 'お気に入り！を取り消す', unlike_path(@note.id), method: :delete %>
  		<% else %>
  			<%= link_to 'お気に入り！', like_path(@note.id), method: :post %>
  		<% end %>
	</div>

	Like：<%= @note.likes.count %>


	<% if current_user == @note.user%>
		<%= link_to 'Edit', edit_note_path(@note) %> |
		<%= link_to 'Back', notes_path %>
	<%end%>